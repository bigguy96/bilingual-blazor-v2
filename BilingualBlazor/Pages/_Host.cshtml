    <main role="main" property="mainContentOfPage" class="container">
        <app>
            <component type="typeof(App)" render-mode="ServerPrerendered" />
        </app>

        <div class="alert alert-info">
            <h2>@Localizer["Title"]</h2>
            <hr/>
